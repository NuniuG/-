<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a110.myhuangchong.ui.WalletActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的钱包"
        android:textSize="30dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="＜"
        android:textSize="20dp"
        android:layout_marginLeft="@dimen/x10"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:id="@+id/fh31" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易记录"
        android:textSize="20dp"
        android:id="@+id/record1"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钱包余额"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥"
        android:textSize="40dp"
        android:textColor="#F00"
        android:layout_marginTop="11dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_toStartOf="@+id/textView10"
        android:layout_marginEnd="11dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="160.00"
        android:textSize="30dp"
        android:textColor="#F00"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toEndOf="@+id/textView11"
        android:id="@+id/money" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:background="#D18800"
            android:id="@+id/recharge"
            android:layout_marginLeft="@dimen/x200"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:id="@+id/withdrawals"
            android:layout_marginLeft="@dimen/x200"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/view4"
        android:layout_marginTop="32dp"
        android:background="#F0F1F5"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/alipay"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:id="@+id/coupon"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/coupon"
            android:layout_marginLeft="20dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的优惠券"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x80"
            android:id="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＞"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x350"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:id="@+id/alipay"
        android:layout_below="@+id/view4"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/alipay"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的支付宝"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x80"
            android:id="@+id/textView9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＞"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x350"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/integral"
        android:layout_below="@id/coupon"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/gold"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的积分"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x80"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＞"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x400"
            />
    </LinearLayout>


</RelativeLayout>
