<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_integral"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="积分任务"
        android:textSize="30dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView12" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="20dp"
        android:id="@+id/pop"
        android:layout_marginEnd="9dp"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="9dp"
        android:layout_alignParentRight="true" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:text="每日任务"
        android:background="#F0F1F5"
        android:layout_marginTop="8dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/fh4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:id="@+id/everyday"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/x20"
            android:src="@mipmap/daily_login"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日登录(1/1)"
            android:textSize="20dp"
           android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＋6"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x180"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＞"
            android:layout_gravity="center_vertical"
            android:textSize="30dp"
            android:layout_marginLeft="@dimen/x25"
            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="＜"
        android:textSize="30dp"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginStart="12dp"
        android:id="@+id/fh4"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/raise"
        android:layout_below="@+id/publish"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/x20"
            android:src="@mipmap/praise"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好评(0/10)"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＋10"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x240"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＞"
            android:layout_gravity="center_vertical"
            android:textSize="30dp"
            android:layout_marginLeft="@dimen/x25"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/publish"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/everyday"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/x20"
            android:src="@mipmap/product_proposal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表故事(0/2)"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x50"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＋10"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x150"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/gold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＞"
            android:layout_gravity="center_vertical"
            android:textSize="30dp"
            android:layout_marginLeft="@dimen/x25"
            />
    </LinearLayout>
</RelativeLayout>
