<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:id="@+id/qx"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/qx"
        android:layout_alignBottom="@+id/qx"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:id="@+id/hc"
        android:layout_marginRight="18dp"
        android:layout_alignParentRight="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        android:layout_marginTop="5dp"
        android:id="@+id/view"
        android:layout_below="@+id/qx"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="欢迎您加入宠物寄养"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView5"
        android:layout_alignParentLeft="true" />


    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请设置密码"
        android:textSize="20dp"
        android:layout_below="@+id/yhm"

        android:layout_marginTop="2dp"
        android:id="@+id/mm" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="----------使用第三方账号登录----------"
        android:layout_marginTop="22dp"
        android:id="@+id/textView"
        android:layout_below="@+id/regis"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />


    <LinearLayout
        android:id="@+id/wexin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="22dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/qx"
        android:layout_marginBottom="27dp"
        android:layout_toRightOf="@+id/qx"
        android:layout_marginLeft="22dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/login_weixin"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/qq2"
        android:layout_alignTop="@+id/wexin1"
        android:layout_toStartOf="@+id/code"
        android:layout_toLeftOf="@+id/code">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/login_qq"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机QQ"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code"
        android:text="获取验证码"
        android:background="@drawable/layout"

        android:layout_below="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:id="@+id/sr"
        android:layout_below="@+id/sjh"
    />

    <EditText
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:id="@+id/sjh"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView5"
/>

    <EditText
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:textSize="20dp"
        android:id="@+id/yhm"

        android:layout_below="@+id/sr" />

    <Button
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/regis"
        android:text="注册"
        android:background="#D18800"
        android:layout_below="@+id/mm"
        android:layout_alignStart="@+id/mm"
        android:layout_alignLeft="@+id/mm" />
</RelativeLayout>
