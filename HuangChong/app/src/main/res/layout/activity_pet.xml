<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a110.myhuangchong.ui.PetActivity">


    <LinearLayout
        android:id="@+id/ll_mycw_ll1"
        android:background="#F9F9F9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">

        <ImageView
            android:id="@+id/iv_mycw_back"
            android:src="@mipmap/back_gray"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="我的宠物"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/x310"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/v_mycw_view1"
        android:layout_below="@+id/ll_mycw_ll1"
        android:background="#66000000"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ListView
        android:id="@+id/lv_mycw_list"
        android:background="#fff"
        android:layout_below="@+id/v_mycw_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</RelativeLayout>
